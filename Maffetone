package equipedfm;

public class Maffetone {

    int iIdade;

    public static void main(String[] args) {

    }

    public Maffetone(int idade, String caso) {
        switch (caso) {
            case "a":
                iIdade = idade + 10;
                break;
            case "b":
                iIdade = idade + 5;
                break;
        }
    }

    public Maffetone(int idade) {
        iIdade = idade;
    }

    public int minimo() {
        return ((180 - iIdade) - 10);
    }

    public int maximo() {
        return (180 - iIdade);
    }

}
